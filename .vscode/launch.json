            "program": "${workspaceFolder}/lib/main.dart",
            "deviceId": "10AE7Y0G79001QG",
            "flutterMode": "debug",
            "args": [
                "--dart-define=FLAVOR=test",
                "--flavor=staging"
            ]
        },
        {
            "name": "ex1 (真机 WiFi 本地环境)",
            "request": "launch", 
