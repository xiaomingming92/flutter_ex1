    "version": "0.2.0",
    "configurations": [

        {
            "name": "ex1 with emulator",
            "request": "launch",
            "type": "dart",
            "program": "${workspaceFolder}/lib/main.dart",
            "deviceId": "emulator-5554",
            "preLaunchTask":"launch-avd",
            "flutterMode": "debug",
            "args": [
                "--dart-define=FLAVOR=dev",
                "--flavor=dev"
            ]
        },
        {
            "name": "ex1 (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "ex1 (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        },
        {
            "name": "ex1 (真机 test环境)",
            "request": "launch",
